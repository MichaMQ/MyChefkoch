<?xml version="1.0"?>
<project name="sample" default="build-war">
	<property name="proj.dir" value=".." />

	<target name="build-war">
		<war destfile="RecipeServer.war" webxml="${proj.dir}/WEB-INF/web.xml">
			<fileset dir="${proj.dir}">
				<exclude name="**/.settings/**" />
				<exclude name="**/ant/**" />
				<exclude name="**/WebContent/**" />
				<exclude name=".classpath" />
				<exclude name=".project" />
				<exclude name=".tern-project" />
				<exclude name=".git" />
				<exclude name="**/x/**" />
				<exclude name="**/lib/**" />
				<exclude name="**/classes/**" />
				<exclude name="**/src/**" />
				<exclude name="**/log/logdatei**" />
				<exclude name="**/log/error**" />
				<exclude name="WEB-INF/web.xml" />
			</fileset>
			<lib dir="${proj.dir}/WEB-INF/lib" />
			<classes dir="${proj.dir}/WEB-INF/classes" />
		</war>
	</target>
</project>